<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Clicar.Customs"
             mc:Ignorable="d"
             x:Class="Clicar.Views.LoginView">
    <ContentPage.Content>
        <ScrollView
            BackgroundColor="{StaticResource BGGrey}">
            <StackLayout
                Spacing="0"
                VerticalOptions="CenterAndExpand">

                <!--Imagen-->
                <StackLayout 
                    VerticalOptions="Start">
                    
                    <StackLayout 
                        HorizontalOptions="CenterAndExpand">
                        <Image    
                                Source="clicar_bajada.png" 
                                VerticalOptions="Center" 
                                Margin="45,45,45,20"/>

                    </StackLayout>
                    
                    
                </StackLayout>


                <Frame
                    Margin="16"
                    CornerRadius="20"
                    HasShadow="True"
                    
                    BackgroundColor="White">
                    <StackLayout
                        Spacing="0">
                        
                        <!--Usuario, contraseña y recordatorio-->
                        <StackLayout 
                            Spacing="10"
                            VerticalOptions="Center">
                            
                            
                            <Label
                                VerticalOptions="CenterAndExpand"
                                Margin="10"
                                Text="Bienvenido"
                                HorizontalOptions="CenterAndExpand"
                                FontSize="24"
                                TextColor="{StaticResource BaseGreen}"
                                FontFamily="{StaticResource BoldFontOpenSans}"/>

                            <Grid
                                HorizontalOptions="CenterAndExpand">



                                <Image  
                                    HorizontalOptions="Start"
                                    WidthRequest="15"
                                    Margin="10,0,0,8"
                                    Grid.Column="0"
                                    Source="user_times_green.png" 
                                    VerticalOptions="Center" />

                                <local:CustomEntry 
                                    Grid.Column="0"
                                    HeightRequest="45"
                                    BackgroundColor="Transparent" 
                                    Placeholder="Ingrese usuario" 
                                    TextColor="{StaticResource BaseGrey}" 
                                    FontSize="14" 
                                    FontFamily="{StaticResource RegularFontOpenSans}"  />

                            </Grid>

                            <Grid
                                HorizontalOptions="CenterAndExpand">



                                <Image  
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    WidthRequest="15"
                                    Margin="10,0,0,8"
                                    Source="lock_solid.png" 
                                    VerticalOptions="Center" />

                                <local:CustomEntry 
                                    VerticalOptions="Center"
                                    IsPassword="True"
                                    x:Name="Password"
                                    Grid.Column="0"
                                    HeightRequest="45"
                                    BackgroundColor="Transparent" 
                                    Placeholder="Ingrese Contraseña" 
                                    TextColor="{StaticResource BaseGrey}" 
                                    FontSize="14" 
                                    FontFamily="{StaticResource RegularFontOpenSans}"  />

                                <Image 
                                    Margin="10,0,10,8"
                                    WidthRequest="25"
                                    x:Name="eye_icon" 
                                    Source="eye_regular.png" 
                                    HorizontalOptions="End" 
                                    VerticalOptions="Center" 
                                    Grid.Column="0" >
                            
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ShowPass" NumberOfTapsRequired="1" />
                                    </Image.GestureRecognizers>
                                </Image>
                        
                        
                        
                        
                            </Grid>

                            <Label
                                HorizontalOptions="CenterAndExpand"
                                Text="Olvidé mi contraseña"
                                TextColor="{StaticResource BaseOrange}"
                                TextDecorations="Underline"
                                FontSize="12"
                                FontFamily="{StaticResource RegularFontOpenSans}">

                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="PasswordRecoveryCommand" NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                

                        <!--Botones-->
                        <StackLayout
                            Margin="20"
                            VerticalOptions="EndAndExpand">


                            <local:CustomButton
                                Clicked="LoginCommand"
                                BackgroundColor="{StaticResource BaseGreen}"
                                Text="Iniciar sesión"
                                FontSize="16"
                                FontFamily="{StaticResource SemiBoldFontOpenSans}"
                                TextColor="White"
                                HeightRequest="40"
                                BorderRadius="20"/>


                            <local:CustomButton
                                Clicked="FingerprintCommand"
                                BackgroundColor="{StaticResource BaseOrange}"
                                Text="Autenticarse con Touch ID"
                                FontSize="16"
                                FontFamily="{StaticResource SemiBoldFontOpenSans}"
                                TextColor="White"
                                HeightRequest="40"
                                BorderRadius="20"/>

                        </StackLayout>

                    </StackLayout>
                </Frame>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>