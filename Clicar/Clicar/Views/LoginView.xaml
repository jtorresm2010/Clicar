<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Clicar.Customs"
             xmlns:i18n="clr-namespace:Clicar.Helpers"
             xmlns:behavior="clr-namespace:Clicar.Behaviors"
             BindingContext="{Binding Main, Source={StaticResource Locator}}" 
             mc:Ignorable="d"
             x:Class="Clicar.Views.LoginView">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Login}"
            BackgroundColor="{StaticResource BGGrey}">
            <StackLayout
                Spacing="0"
                VerticalOptions="CenterAndExpand">

                <!--Imagen-->
                <StackLayout 
                    VerticalOptions="Start">
                    
                    <StackLayout 
                        HorizontalOptions="CenterAndExpand">
                        <Image    
                                Source="clicar_bajada.png" 
                                VerticalOptions="Center" 
                                Margin="45,45,45,20"/>

                    </StackLayout>
                    
                    
                </StackLayout>


                <Frame
                    Padding="20,0"
                    Margin="16"
                    CornerRadius="20"
                    HasShadow="True"
                    HeightRequest="330"
                    BackgroundColor="White">
                    <StackLayout
                        Spacing="0">
                        
                        <!--Usuario, contraseña y recordatorio-->
                        <StackLayout 
                            Spacing="8"
                            VerticalOptions="Center">
                            
                            <!--Texto Bienvenida-->
                            <Label
                                Margin="0,20,0,0"
                                VerticalOptions="CenterAndExpand"
                                Text="{i18n:Translate Welcome}"
                                HorizontalOptions="CenterAndExpand"
                                FontSize="24"
                                TextColor="{StaticResource BaseGreen}"
                                FontFamily="{StaticResource BoldFontOpenSans}"/>

                            <!--Grid Usuario-->
                            <Grid
                                ColumnSpacing="0"
                                HorizontalOptions="CenterAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <Image  
                                    Opacity="0.6"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HorizontalOptions="CenterAndExpand"
                                    Aspect="AspectFill"
                                    HeightRequest="18"
                                    WidthRequest="15"
                                    Source="user_times_green.png" 
                                    VerticalOptions="Center" />

                                <local:CustomEntry 
                                    
                                    
                                    Keyboard="Email"
                                    x:Name="UsuarioEntry"
                                    Text="{Binding Usuario}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    VerticalOptions="Center"
                                    HeightRequest="40"
                                    BackgroundColor="Transparent" 
                                    Placeholder="{i18n:Translate UsernamePlaceholder}" 
                                    TextColor="{StaticResource BaseGrey}" 
                                    FontSize="14" 
                                    FontFamily="{StaticResource RegularFontOpenSans}"  >
                                    <!--<local:CustomEntry.Behaviors>
                                        <behavior:LoginBehavior
                                            ControlView="{x:Reference Name=LoginButton}"/>
                                    </local:CustomEntry.Behaviors>-->
                                </local:CustomEntry>
                                <Frame
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    HasShadow="False"
                                    Padding="0"
                                    VerticalOptions="EndAndExpand"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource BaseGreen}"/>


                            </Grid>

                            <!--Grid pass-->
                            <Grid
                                ColumnSpacing="0"
                                HorizontalOptions="CenterAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>

                                <Image  
                                    Opacity="0.6"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HorizontalOptions="CenterAndExpand"
                                    WidthRequest="15"
                                    Source="lock_solid.png" 
                                    VerticalOptions="Center" />
                                <local:CustomEntry 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    x:Name="Password"
                                    Text="{Binding Clave}"
                                    VerticalOptions="Center"
                                    IsPassword="True"
                                    HeightRequest="40"
                                    BackgroundColor="Transparent" 
                                    Placeholder="{i18n:Translate PasswordPlaceholder}" 
                                    TextColor="{StaticResource BaseGrey}" 
                                    FontSize="14" 
                                    FontFamily="{StaticResource RegularFontOpenSans}"  />

                                <StackLayout
                                    Padding="0"
                                    WidthRequest="25"
                                    HorizontalOptions="FillAndExpand" 
                                    VerticalOptions="FillAndExpand"
                                    Grid.Row="0"
                                    Grid.Column="2" >
                                    
                                    <Image 
                                        HorizontalOptions="CenterAndExpand"
                                        VerticalOptions="CenterAndExpand"
                                        x:Name="eye_icon" 
                                        Source="eye_faded.png" >
                                    </Image>
                                    
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ShowPass"/>
                                    </StackLayout.GestureRecognizers>
                                
                                </StackLayout>
                                
                                <Frame
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    HasShadow="False"
                                    Padding="0"
                                    VerticalOptions="EndAndExpand"
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource BaseGreen}"/>


                            </Grid>

                            <!--recuperar pass-->

                            <StackLayout
                                HeightRequest="25"
                                HorizontalOptions="CenterAndExpand">
                                
                                <Label
                                    Text="{i18n:Translate PasswordRecovery}"
                                    TextColor="{StaticResource BaseOrange}"
                                    TextDecorations="Underline"
                                    FontSize="12"
                                    FontFamily="{StaticResource RegularFontOpenSans}">

                                </Label>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="PasswordRecoveryCommand" NumberOfTapsRequired="1" />
                            </StackLayout.GestureRecognizers>
                            </StackLayout>
                            
                            <!--Loading icon-->
                            <ActivityIndicator 
                            Margin="0"
                            HeightRequest="10"
                            Color="{StaticResource BaseGreen}" 
                            IsRunning="{Binding IsLoading}" />
                            
                            
                        </StackLayout>


                        <!--Botones-->
                        <StackLayout
                            Margin="20"
                            VerticalOptions="EndAndExpand">


                            <Button
                                x:Name="LoginButton"
                                Command="{Binding LoginICommand}"
                                BackgroundColor="{StaticResource BaseGreen}"
                                Text="{i18n:Translate LoginButton}"
                                FontSize="16"
                                FontFamily="{StaticResource SemiBoldFontOpenSans}"
                                TextColor="White"
                                HeightRequest="40"
                                BorderRadius="20"/>


                            <Button
                                IsEnabled="{Binding Main.Login.FigerprintAvailable, Source={StaticResource Locator}}"
                                Command="{Binding FingerprintICommand}"
                                BackgroundColor="{StaticResource BaseOrange}"
                                Text="{i18n:Translate TouchIDButton}"
                                FontSize="16"
                                FontFamily="{StaticResource SemiBoldFontOpenSans}"
                                TextColor="White"
                                HeightRequest="40"
                                BorderRadius="20"/>

                        </StackLayout>

                    </StackLayout>
                </Frame>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>