<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             xmlns:local="clr-namespace:Clicar.Customs"
             mc:Ignorable="d"
             x:Class="Clicar.Views.EditarDetalleView">

    <NavigationPage.TitleView>
        <StackLayout 
            Margin="0"
            Orientation="Horizontal" VerticalOptions="Center" Spacing="10">
            <Image 
                Margin="0,0,70,0"
                HorizontalOptions="CenterAndExpand"
                HeightRequest="25"
                Source="clicar.png">
            </Image>


        </StackLayout>
    </NavigationPage.TitleView>



    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            BackgroundColor="White">
            <Frame/>
            <StackLayout
            Padding="24,16"
            Spacing="16">
            
            <Label
                Text="Item a revisar"
                FontSize="14"
                    FontFamily="{StaticResource BoldFontOpenSans}"
                    TextColor="{StaticResource BaseGreen}"/>
            <Label
                    Margin="0,10"
                    HorizontalOptions="StartAndExpand"
                    Text="Seleccione estado"
                    FontSize="14"
                    FontFamily="{StaticResource RegularFontOpenSans}"
                    TextColor="{StaticResource BaseGreyLight}"/>
            <input:RadioButtonGroupView 
                Spacing="0"
                Orientation="Horizontal"
                    Margin="16,0">
                <input:RadioButton 
                        WidthRequest="130"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontFamily="{StaticResource RegularFontOpenSans}"
                        TextFontSize="14"
                        Text="Bueno" 
                        Color="{StaticResource BaseOrange}"/>
                <input:RadioButton
                        HorizontalOptions="StartAndExpand"
                        IsChecked="{Binding Estado}"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontFamily="{StaticResource RegularFontOpenSans}"
                        TextFontSize="14"
                        Text="Malo" 
                        Color="{StaticResource BaseOrange}"/>
            </input:RadioButtonGroupView>

            <StackLayout>
                
                <Label
                    Margin="0,10"
                    HorizontalOptions="StartAndExpand"
                    Text="Seleccione solución"
                    FontSize="14"
                    FontFamily="{StaticResource RegularFontOpenSans}"
                    TextColor="{StaticResource BaseGreyLight}"/>
                <input:RadioButtonGroupView 
                    Orientation="Horizontal"
                    Spacing="0"
                    Margin="16,0">
                    <input:RadioButton 
                        WidthRequest="130"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontFamily="{StaticResource RegularFontOpenSans}"
                        TextFontSize="14"
                        Text="Reparar" 
                        Color="{StaticResource BaseOrange}"/>
                    <input:RadioButton
                    HorizontalOptions="StartAndExpand"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontFamily="{StaticResource RegularFontOpenSans}"
                        TextFontSize="14"
                        Text="Sustituir" 
                        Color="{StaticResource BaseOrange}"/>
            </input:RadioButtonGroupView>
            
            </StackLayout>
            
                
            
            <local:CustomPicker
                Title="Seleccionar otra Sucursal"
                FontSize="14"
                TextColor="{StaticResource BaseGrey44}"
                FontFamily="{StaticResource SemiBoldFontOpenSans}">
                <Picker.Items>
                    <x:String>Leve</x:String>
                    <x:String>Medio</x:String>
                    <x:String>Grave</x:String>
                </Picker.Items>
            </local:CustomPicker>
            




            <Label
                Text="Describa la condición observada"
                FontSize="14"
                FontFamily="{StaticResource BoldFontOpenSans}"
                TextColor="{StaticResource BaseGrey}"/>
                    <Frame
                        HasShadow="False"
                        CornerRadius="5"
                        BorderColor="{StaticResource BaseGreyLight}"
                        BackgroundColor="{StaticResource BGGrey}"
                        Padding="0">
                        <Editor
                            Visual="Default"
                            HeightRequest="220"/>
                        
                    </Frame>
            <Label
                Text="Cargar foto"
                FontSize="14"
                FontFamily="{StaticResource BoldFontOpenSans}"
                TextColor="{StaticResource BaseGrey}"/>
            <Image
                HeightRequest="220"
                Source="camara_select_foto"/>
            <StackLayout
                BindingContext="{Binding Main, Source={StaticResource Locator}}"
                Spacing="10"
                Orientation="Horizontal"
                Margin="24,0">

                <local:CustomButton
                    HorizontalOptions="EndAndExpand"
                    BackgroundColor="White"
                    Text="Cancelar"
                    FontSize="14"
                    FontFamily="{StaticResource BoldFontOpenSans}"
                    TextColor="{StaticResource BaseGreyLight}"
                    HeightRequest="40"
                    WidthRequest="90"
                    BorderRadius="20"/>

                <local:CustomButton
                    HorizontalOptions="EndAndExpand"
                    BackgroundColor="{StaticResource BaseGreen}"
                    Text="Registrar"
                    FontSize="14"
                    FontFamily="{StaticResource BoldFontOpenSans}"
                    TextColor="White"
                    HeightRequest="40"
                    WidthRequest="128"
                    BorderRadius="20"/>
            </StackLayout>


        </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>