<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Clicar.Customs"
             xmlns:views="clr-namespace:Clicar.Templates"
             xmlns:behavior="clr-namespace:Clicar.Behaviors"
             xmlns:i18n="clr-namespace:Clicar.Helpers"
             BindingContext="{Binding Main, Source={StaticResource Locator}}" 
             mc:Ignorable="d"
             x:Class="Clicar.Views.ResumenInspeccion">

    <NavigationPage.TitleView>
        <StackLayout 
            Margin="0"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal" 
            VerticalOptions="Center" 
            Spacing="0">
            <Image 
                WidthRequest="100"
                x:Name="TitleImage"
                HorizontalOptions="EndAndExpand"
                Source="clicar.png">
                <Image.Behaviors>
                    <behavior:TitleImageBehavior/>
                </Image.Behaviors>
            </Image>
        </StackLayout>
    </NavigationPage.TitleView>



    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Reporte}">
            <StackLayout
                Spacing="0"
                VerticalOptions="FillAndExpand"
                Margin="0,8"
                BackgroundColor="White">

              <Frame
                HasShadow="False"
                CornerRadius="0"
                Padding="39,21,39,9" 
                  
                BackgroundColor="{StaticResource BaseGreen}">

                    <StackLayout
                        BindingContext="{Binding Main.Inspeccion, Source={StaticResource Locator}}" 
                        Spacing="0">

                        <Label
                            Text="Resumen de inspección"
                            HorizontalOptions="Start"
                            FontSize="16"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource BoldFontOpenSans}"/>

                        <StackLayout 
                        Orientation="Horizontal" 
                        Spacing="0">

                            <Label
                            Text="{Binding CurrentInspeccion.Patente}"
                            HorizontalOptions="Start"
                            FontSize="16"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource BoldFontOpenSans}"/>

                            <Label
                            Text=" - "
                            HorizontalOptions="Start"
                            FontSize="16"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource BoldFontOpenSans}"/>


                            <Label
                            Text="{Binding CurrentInspeccion.Model}"
                            HorizontalOptions="Start"
                            FontSize="16"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource BoldFontOpenSans}"/>

                        </StackLayout>

                        <StackLayout 
                        Orientation="Horizontal" 
                        Spacing="0">

                            <Label
                            Text="{Binding CurrentInspeccion.Brand}"
                            HorizontalOptions="Start"
                            FontSize="14"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource RegularFontOpenSans}"/>

                            <Label
                            Text=" - "
                            HorizontalOptions="Start"
                            FontSize="14"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource RegularFontOpenSans}"/>


                            <Label
                            Text="{Binding CurrentInspeccion.Color}"
                            HorizontalOptions="Start"
                            FontSize="14"
                            TextColor="{StaticResource BGGrey}"
                            FontFamily="{StaticResource RegularFontOpenSans}"/>

                        </StackLayout>

                    </StackLayout>



                </Frame>

                <StackLayout
                    Spacing="20"
                    Margin="24">

                    <!--Valoracion general-->
                    <StackLayout
                        Spacing="10">

                        <Label
                            HorizontalOptions="StartAndExpand"
                            Text="{i18n:Translate CarRating}"
                            FontSize="14"
                            FontFamily="{StaticResource BoldFontOpenSans}"
                            TextColor="{StaticResource BaseGrey}"/>

                        <views:StarTemplate
                            StarValue="{Binding CurrentStarRating}"
                            IsEditable="False"
                            HorizontalOptions="CenterAndExpand"/>
                       
                        
                    </StackLayout>

                    
                    <!--Comentario Inspector-->
                    <StackLayout
                    Spacing="10">
                        <Label
                            HorizontalOptions="StartAndExpand"
                            WidthRequest="230"
                            Text="{i18n:Translate InspectorComment}"
                            FontSize="14"
                            FontFamily="{StaticResource BoldFontOpenSans}"
                            TextColor="{StaticResource BaseGrey}"/>
                        <Frame
                            Margin="8,0"
                            HasShadow="False"
                            CornerRadius="5"
                            BorderColor="{StaticResource BaseGreyE}"
                            BackgroundColor="{StaticResource BGGrey}"
                            Padding="0">
                        <local:CustomEditor
                            IsReadOnly="True"
                            Text="{Binding EvalGeneral}"
                            FontSize="12"
                            TextColor="{StaticResource BaseGrey}"
                            FontFamily="{StaticResource RegularFontOpenSans}"
                            Visual="Default"
                            HeightRequest="60"/>

                        </Frame>
                    </StackLayout>


                    <StackLayout
                    Spacing="10">
                        <Label
                            HorizontalOptions="StartAndExpand"
                            WidthRequest="230"
                            Text="Manual, llaves y otros"
                            FontSize="14"
                            FontFamily="{StaticResource BoldFontOpenSans}"
                            TextColor="{StaticResource BaseGrey}"/>
                        <Frame
                            Margin="8,0"
                            HasShadow="False"
                            CornerRadius="5"
                            BorderColor="{StaticResource BaseGreyE}"
                            BackgroundColor="{StaticResource BGGrey}"
                            Padding="0">
                            <local:CustomEditor
                            FontSize="12"
                            TextColor="{StaticResource BaseGrey}"
                            FontFamily="{StaticResource RegularFontOpenSans}"
                            Visual="Default"
                            HeightRequest="60"/>

                        </Frame>
                    </StackLayout>

                    <Frame
                        HasShadow="False"
                        CornerRadius="10"
                        Margin="32,0"
                        Padding="15"
                        BackgroundColor="{StaticResource LighterOrange}">
                        <StackLayout
                            Spacing="0"
                            HorizontalOptions="CenterAndExpand">
                            <Label
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="StartAndExpand"
                                WidthRequest="230"
                                Text="{i18n:Translate CompletedBy}"
                                FontSize="14"
                                FontFamily="{StaticResource BoldFontOpenSans}"
                                TextColor="{StaticResource BaseOrange}"/>
                            <Label
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="StartAndExpand"
                                WidthRequest="230"
                                Text="{Binding CorreoUsuario}"
                                FontSize="14"
                                FontFamily="{StaticResource RegularFontOpenSans}"
                                TextColor="{StaticResource BaseOrange}"/>
                            
                        </StackLayout>
                        
                        
                        
                    </Frame>




                    <!--Boton-->
                    <Button
                            Clicked="FinishCommand"
                            HorizontalOptions="CenterAndExpand"
                            BackgroundColor="{StaticResource BaseGreen}"
                            Text="{i18n:Translate Close}"
                            FontSize="14"
                            FontFamily="{StaticResource BoldFontOpenSans}"
                            TextColor="White"
                            HeightRequest="40"
                            WidthRequest="128"
                            BorderRadius="20"/>

                </StackLayout>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>