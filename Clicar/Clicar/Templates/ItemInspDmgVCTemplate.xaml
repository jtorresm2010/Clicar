<?xml version="1.0" encoding="utf-8" ?>
<ViewCell 
        xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:d="http://xamarin.com/schemas/2014/forms/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:Clicar.Helpers"
    xmlns:local="clr-namespace:Clicar.Templates"
    mc:Ignorable="d"
        x:Class="Clicar.Templates.ItemInspDmgVCTemplate">


    <StackLayout
        Margin="24,0,15,0"
        HorizontalOptions="FillAndExpand"
        Orientation="Horizontal">

        <StackLayout
            Spacing="0"
            HorizontalOptions="StartAndExpand">
            <Label
                TextColor="{StaticResource DarkGrey}"
                FontSize="14"
                FontFamily="{StaticResource RegularFontOpenSans}"
                Text="{Binding ITINS_DESCRIPCION}"/>
            <StackLayout
                Spacing="15"
                HeightRequest="40"
                Orientation="Horizontal">

                <local:LockTemplate
                    HeightRequest="40"
                    Lockable="{Binding ITINS_DESHABILITAR}"/>

                <local:StateTemplate
                    HeightRequest="40"
                    IsDamage="{Binding ITINS_CONDICION}"/>

                <!--<StackLayout 
                    VerticalOptions="CenterAndExpand"
                    Orientation="Horizontal">

                    <Label  
                        VerticalOptions="Start"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontSize="12"
                        FontFamily="{StaticResource BoldFontOpenSans}"
                        Text="{i18n:Translate State}"/>

                    <Label  
                        VerticalOptions="StartAndExpand"
                        TextColor="{StaticResource BaseGreyLight}"
                        FontSize="12"
                        FontFamily="{StaticResource RegularFontOpenSans}"
                        Text="no informado"/>
                </StackLayout>-->

            </StackLayout>
        </StackLayout>

        <Image
            Source="Forward">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Main.Inspeccion.EditarDetalleICommand, Source={StaticResource Locator}}" CommandParameter="{Binding .}"/>
            </Image.GestureRecognizers>
        </Image>




    </StackLayout>


</ViewCell>