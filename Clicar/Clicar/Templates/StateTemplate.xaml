<?xml version="1.0" encoding="utf-8" ?>
<StackLayout 
        xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:d="http://xamarin.com/schemas/2014/forms/design"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i18n="clr-namespace:Clicar.Helpers"
        mc:Ignorable="d"
        HeightRequest="30"
        VerticalOptions="CenterAndExpand"
        Orientation="Horizontal"
        
        x:Class="Clicar.Templates.StateTemplate">

    <Label  
        VerticalOptions="Start"
        TextColor="{StaticResource BaseGreyLight}"
        FontSize="12"
        FontFamily="{StaticResource BoldFontOpenSans}"
        Text="{i18n:Translate State}"/>

    <Label  
        x:Name="StateText"
        VerticalOptions="StartAndExpand"
        TextColor="{StaticResource BaseGreyLight}"
        FontSize="12"
        FontFamily="{StaticResource RegularFontOpenSans}"
        Text="no informado"/>
</StackLayout>
    